# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=landing_pad_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_URL=postgres://postgres:postgres@localhost:5432/landing_pad_dev
# Set to 'true' to force database reset during development (CAUTION: destroys data)
DB_FORCE_RESET=false

# Authentication & Security
JWT_ACCESS_SECRET=your-jwt-access-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
PASSWORD_RESET_EXPIRATION=1h

# Default admin account (for seeding development database)
ADMIN_DEFAULT_PASSWORD=admin123
DEMO_DEFAULT_PASSWORD=demo123
TEST_DEFAULT_PASSWORD=test123

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4 # Options: gpt-3.5-turbo, gpt-4
OPENAI_ORGANIZATION=your-organization-id # Optional

# Rate Limiting
DISABLE_RATE_LIMIT=false
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info # Options: error, warn, info, http, verbose, debug, silly
LOG_FORMAT=dev # Options: dev, combined, json, tiny
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# Email Configuration (for sending verification emails, password reset, etc.)
EMAIL_SERVICE=smtp # Options: smtp, sendgrid, mailgun, ses
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email-user
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@landingpad.dev

# Stripe (for payments)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PRICE_BASIC=price_basic_id
STRIPE_PRICE_ADVANCED=price_advanced_id
STRIPE_PRICE_PRO=price_pro_id

# Storage Configuration (for file uploads)
STORAGE_TYPE=local # Options: local, s3, gcs
STORAGE_LOCAL_PATH=uploads
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Cache Configuration
CACHE_ENABLED=false
CACHE_TTL=300 # 5 minutes in seconds
REDIS_URL=redis://localhost:6379
