# Server Configuration
PORT=5000
NODE_ENV=development

# Authentication
JWT_SECRET=your_jwt_secret_key_here
# Set to true to bypass authentication in development
BYPASS_AUTH=true
# Set to true to bypass subscription checks in development
ASSUME_PAID_USER=true

# OpenAI Configuration
# Required for AI functionality - get this from openai.com
OPENAI_API_KEY=your_openai_api_key_here
# Model to use - gpt-3.5-turbo is faster and cheaper, gpt-4 is more capable
OPENAI_MODEL=gpt-3.5-turbo

# Database Configuration
DB_NAME=landing_pad
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Stripe Configuration (for subscription billing)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug